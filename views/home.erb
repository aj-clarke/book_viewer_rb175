<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% @contents.each_with_index do |chapter_name, chapter_number| %>
      <li class="pure-menu-item">
        <a href="chapters/<%= (chapter_number + 1) %>" class="pure-menu-link">Chapter <%= (chapter_number + 1) %> - <%= chapter_name %></a>
      </li>
    <% end %>
  </ul>
</div>